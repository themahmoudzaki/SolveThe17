---
const navItems = [
  { title: "Home", url: "#" },
  { title: "Technology", url: "#technology" },
  { title: "Benefits", url: "#benefits" },
  { title: "Mission", url: "#mission" },
  { title: "Team", url: "#team" }
];
---

<header id="header" class="fixed w-full z-30 transition-all duration-300">
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <a href="#" class="text-2xl font-bold flex items-center">
      <span class="text-leaf-600">Bee</span><span class="text-honey-500">Wise</span>
    </a>
    
    <nav class="hidden md:block">
      <ul class="flex space-x-8">
        {navItems.map(item => (
          <li>
            <a 
              href={item.url} 
              class="text-gray-800 hover:text-leaf-600 transition-colors duration-300 font-medium"
            >
              {item.title}
            </a>
          </li>
        ))}
        <li>
          <a 
            href="#contact" 
            class="px-4 py-2 bg-honey-500 hover:bg-honey-600 text-white rounded-lg transition-colors duration-300 font-medium"
          >
            Contact
          </a>
        </li>
      </ul>
    </nav>
    
    <button id="menu-toggle" class="md:hidden text-gray-800" aria-label="Toggle Menu">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white shadow-lg absolute w-full">
    <div class="container mx-auto px-4 py-3">
      <ul class="space-y-4 py-4">
        {navItems.map(item => (
          <li>
            <a 
              href={item.url} 
              class="block py-2 text-gray-800 hover:text-leaf-600 transition-colors duration-300 font-medium"
            >
              {item.title}
            </a>
          </li>
        ))}
        <li>
          <a 
            href="#contact" 
            class="block py-2 px-4 bg-honey-500 hover:bg-honey-600 text-white rounded-lg transition-colors duration-300 font-medium text-center"
          >
            Contact
          </a>
        </li>
      </ul>
    </div>
  </div>
</header>

<script>
  // Toggle mobile menu
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
  
  // Header scroll effect
  const header = document.getElementById('header');
  
  if (header) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 100) {
        header.classList.add('bg-white', 'shadow-md');
      } else {
        header.classList.remove('bg-white', 'shadow-md');
      }
    });
  }
  
  // Close mobile menu when clicking a link
  const mobileLinks = document.querySelectorAll('#mobile-menu a');
  
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      if (mobileMenu) {
        mobileMenu.classList.add('hidden');
      }
    });
  });
</script>