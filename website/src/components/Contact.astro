<section id="contact" class="py-20 bg-gradient-to-br from-honey-50 to-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Get in <span class="text-honey-500">Touch</span></h2>
        <p class="text-xl text-gray-600">
          Interested in BeeWise for your bee colonies? We'd love to hear from you!
        </p>
      </div>
      
      <div class="grid md:grid-cols-5 gap-8">
        <div class="md:col-span-2 bg-white p-8 rounded-xl shadow-lg">
          <h3 class="text-2xl font-bold mb-6">Contact Information</h3>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="bg-honey-100 p-2 rounded-full mr-4 mt-1">
